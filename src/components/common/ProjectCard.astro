---
import Badge from './Badge.astro'

interface Project {
  number: string
  title: string
  description: string
  techs: string[]
  url: string
}

const { project } = Astro.props as { project: Project & { delay: number } }
---

<li class="flow-root h-full project-card opacity-0" data-delay={project.delay}>
  <a
    href={project.url}
    class="group block h-full transition-all duration-500 hover:scale-105 focus:scale-105 focus:outline-none focus:ring-2 focus:ring-primary/60 rounded-lg"
    aria-label={`Ver proyecto ${project.title}`}
    target="_blank"
    rel="noopener noreferrer"
  >
    <article
      class="h-full flex flex-col justify-between p-4 rounded-lg transition-all duration-300 hover:bg-[#0c0f19]"
    >
      <div>
        <p
          class="group-hover:text-primary group-focus:text-primary transition-all duration-500 text-slate-600 text-9xl font-black lg:rotate-90 xl:-translate-x-32 lg:-translate-x-20 lg:mb-8 xl:mb-0 lg:pb-8 transform group-hover:scale-110 group-focus:scale-110"
        >
          {project.number}
        </p>
        <h3
          class="italic shrink-0 text-lg font-bold group-hover:text-white transition-colors duration-300"
        >
          {project.title}
        </h3>
        <p
          class="text-lg mt-3 indent-9 leading-relaxed group-hover:text-slate-600 transition-colors duration-300"
        >
          {project.description}
        </p>
      </div>

      <div
        class="mt-4 opacity-0 group-hover:opacity-100 group-focus:opacity-100 transition-all duration-300 transform translate-y-2 group-hover:translate-y-0 group-focus:translate-y-0"
      >
        <ul class="flex flex-wrap gap-2">
          {
            project.techs.map(tech => (
              <li>
                <Badge>{tech}</Badge>
              </li>
            ))
          }
        </ul>
      </div>
    </article>
  </a>
</li>
