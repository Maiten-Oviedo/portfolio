---
import GitHubIcon from '../icons/GitHubIcon.astro'
import InstagramIcon from '../icons/InstagramIcon.astro'
import LineIcon from '../icons/LineIcon.astro'
import LinkedinIcon from '../icons/LinkedinIcon.astro'
import MailIcon from '../icons/MailIcon.astro'
import MountainIcon from '../icons/MountainIcon.astro'
import NetWorkPill from '../NetWorkPill.astro'
---

<!-- Schema Markup for SEO -->
<script type="application/ld+json">
  {
    "@context": "https://schema.org",
    "@type": "Person",
    "name": "Maitén Oviedo",
    "jobTitle": "Desarrollador Full Stack",
    "url": "https://maitenoviedo.dev",
    "sameAs": [
      "https://www.linkedin.com/in/maiten-oviedo/",
      "https://github.com/Maiten-Oviedo",
      "https://www.instagram.com/maiten_oviedo"
    ],
    "email": "maitenoviedo513@gmail.com"
  }
</script>

<section
  class="relative h-svh flex items-center justify-center overflow-hidden"
  role="banner"
  aria-label="Presentación personal de Maitén Oviedo"
>
  <!-- Animated Gradient Orbs -->
  <div class="absolute inset-0 overflow-hidden pointer-events-none">
    <div
      class="absolute top-1/4 left-1/4 w-96 h-96 bg-primary/10 rounded-full blur-3xl animate-float-slow"
    >
    </div>
    <div
      class="absolute bottom-1/4 right-1/4 w-80 h-80 bg-accent/10 rounded-full blur-3xl animate-float-reverse"
    >
    </div>
  </div>

  <div class="container mx-auto relative z-10 px-4">
    <div class="max-w-4xl mx-auto text-center">
      <!-- Main Heading with Enhanced Animation -->
      <header class="mb-8">
        <div class="mb-6 animate-fade-in-up" style="animation-delay: 0.2s;">
          <h1
            class="text-5xl md:text-7xl lg:text-8xl font-bold text-balance leading-tight"
          >
            <span
              class="text-foreground block animate-slide-in-left text-2xl"
              style="animation-delay: 0.3s;"
            >
              Hola, soy
            </span>
            <div>
              <span class="text-black">Maitén</span>
              <span class="text-primary"> Oviedo </span>
            </div>
          </h1>
        </div>

        <!-- Enhanced Subtitle with Icon Animation -->
        <div
          class="animate-fade-in-up flex justify-center items-center mb-12 group"
          style="animation-delay: 0.7s;"
        >
          <p
            class="text-xl md:text-2xl lg:text-3xl text-muted-foreground font-medium text-balance hover:text-foreground transition-colors duration-300"
          >
            Desarrollador Full Stack
          </p>
        </div>
      </header>

      <!-- Enhanced Call to Action -->
      <div class="mb-12 animate-fade-in-up" style="animation-delay: 0.9s;">
        <div
          class="flex flex-col sm:flex-row gap-4 justify-center items-center"
        >
          <a
            href="#experiencia"
            class="group relative px-4 py-2 bg-primary text-primary-foreground rounded-full font-semibold hover:bg-primary/90 transition-all duration-300 hover:scale-105 hover:shadow-lg hover:shadow-primary/25"
          >
            <span class="relative z-10">Conocé mi experiencia</span>
            <div
              class="absolute inset-0 bg-gradient-to-r from-primary to-accent rounded-full opacity-0 group-hover:opacity-100 transition-opacity duration-300"
            >
            </div>
          </a>
          <a
            href="#contacto"
            class="px-4 py-2 border-2 border-primary text-primary rounded-full hover:bg-primary hover:text-primary-foreground transition-all duration-300 hover:scale-105 hover:text-white"
          >
            Hablemos
          </a>
        </div>
      </div>

      <!-- Enhanced Social Networks -->
      <nav
        aria-label="Redes Sociales"
        class="w-full flex flex-wrap justify-center items-center"
      >
        <ul
          class="animate-slide-up flex justify-center flex-wrap gap-4"
          style="animation-delay: 1.1s;"
        >
          <li class="animate-fade-in-up flex" style="animation-delay: 1.2s;">
            <NetWorkPill
              href="https://www.linkedin.com/in/maiten-oviedo/"
              aria-label="Visita mi perfil de LinkedIn"
            >
              <LinkedinIcon className="size-4" aria-hidden="true" />
              <span>LinkedIn</span>
            </NetWorkPill>
          </li>
          <li class="animate-fade-in-up flex" style="animation-delay: 1.3s;">
            <NetWorkPill
              href="https://github.com/Maiten-Oviedo"
              aria-label="Visita mi perfil de GitHub"
            >
              <GitHubIcon className="size-4" aria-hidden="true" />
              <span>GitHub</span>
            </NetWorkPill>
          </li>
          <li class="animate-fade-in-up flex" style="animation-delay: 1.4s;">
            <NetWorkPill
              href="https://www.instagram.com/maiten_oviedo"
              aria-label="Visita mi perfil de Instagram"
            >
              <InstagramIcon className="size-4" aria-hidden="true" />
              <span>Instagram</span>
            </NetWorkPill>
          </li>
          <li class="animate-fade-in-up flex" style="animation-delay: 1.5s;">
            <NetWorkPill
              href="mailto:maitenoviedo513@gmail.com"
              aria-label="Envíame un email"
            >
              <MailIcon className="size-4" aria-hidden="true" />
              <span>Email</span>
            </NetWorkPill>
          </li>
          <li class="animate-fade-in-up flex" style="animation-delay: 1.6s;">
            <NetWorkPill
              href="/CV-MaitenOviedo.pdf"
              aria-label="Descarga mi Curriculum Vitae"
            >
              <MountainIcon className="size-4" aria-hidden="true" />
              <span>CV</span>
            </NetWorkPill>
          </li>
        </ul>
      </nav>
    </div>
  </div>
</section>
