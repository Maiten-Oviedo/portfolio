---
import { experiences } from '../../constants/experiencies'
import ExperiencieCard from '../common/ExperiencieCard.astro'
---

<section id="experiencia" class="min-h-screen p-4 pt-0 md:p-0 relative">
  <div class="max-w-7xl mx-auto h-full">
    <div class="px-8 2xl:max-w-7xl mx-auto py-6 relative">
      <div class="space-y-2">
        <div class="h-0.5 bg-slate-600 project-line opacity-0"></div>
        <h2
          id="projects-heading"
          class="text-white text-end text-2xl md:text-4xl lg:text-5xl font-bold project-title opacity-0"
        >
          <span>Mi</span>
          <span
            class="bg-gradient-to-r from-transparent to-primary bg-clip-text text-transparent"
          >
            experiencia
          </span>
        </h2>
      </div>
    </div>
    <div class="py-8">
      <ul
        class="flex flex-col md:flex-row md:flex-wrap gap-6 w-full justify-center items-center md:px-4"
      >
        {
          experiences.map((exp, index) => (
            <ExperiencieCard exp={exp} index={index} />
          ))
        }
      </ul>
    </div>
  </div>
</section>
